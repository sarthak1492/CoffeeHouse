<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="application.sample.coffeehouse.SplashScreenActivity"
    tools:showIn="@layout/activity_splash_screen">

    <ImageView
        android:id="@+id/imgSplashBackground"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:alpha="0.9"
        android:src="@drawable/loginbg"
        android:foreground="@drawable/bg_image_brown_gradient"/>

    <application.sample.coffeehouse.Font_MontserratSemiBoldTextView
        android:id="@+id/lblTheCoffeeHouse"
        app:layout_widthPercent="30%"
        app:layout_heightPercent="20%"
        android:textSize="18sp"
        android:background="@drawable/bg_logo_text_white_square"
        android:text="The \nCoffee House"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        app:layout_marginRightPercent="10%"
        android:textColor="@android:color/white"
        app:layout_marginBottomPercent="10%" />


</android.support.percent.PercentRelativeLayout>
